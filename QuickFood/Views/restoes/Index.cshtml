@model IEnumerable<QuickFood.Models.resto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Ajouter nouveau", "Create")
</p>
<table class="table">
    <tr>
        <th>
       Nom Resto
        </th>
        <th>
        Téléphone Resto
        </th>
        <th>
           Adresse Resto
        </th>
        <th>
       Description Resto
        </th>
        <th>
           Fourchette Resto
        </th>
        <th>
           Spécialité Resto
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nom_resto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tel_resto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.adr_resto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fourchette)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.specialite.nom_sp)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.id_resto }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_resto }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.id_resto })
        </td>
    </tr>
}

</table>
