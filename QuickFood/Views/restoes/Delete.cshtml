@model QuickFood.Models.resto

@{
    ViewBag.Title = "Supprimer";
}

<h2>Supprimer</h2>

<h3>Etes-vous sûr de vouloir supprimer ce?</h3>
<div>
    <h4>resto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
        Nom
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom_resto)
        </dd>

        <dt>
       Téléphone
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tel_resto)
        </dd>

        <dt>
           Adresse
        </dt>

        <dd>
            @Html.DisplayFor(model => model.adr_resto)
        </dd>

        <dt>
       Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
         Fourchette
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fourchette)
        </dd>

        <dt>
       Spécialité
        </dt>

        <dd>
            @Html.DisplayFor(model => model.specialite.nom_sp)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
            @Html.ActionLink("RETOUR À LA LISTE", "Index")
        </div>
    }
</div>
