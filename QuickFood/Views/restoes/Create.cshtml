@model QuickFood.Models.resto

@{
    ViewBag.Title = "Ajouter";
}

<h2>Creer</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>resto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2">
                <strong>Nom </strong>
            </div>            <div class="col-md-10">
                @Html.EditorFor(model => model.nom_resto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nom_resto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <strong>Téléphone</strong>
            </div>            <div class="col-md-10">
                @Html.EditorFor(model => model.tel_resto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tel_resto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <strong>Adresse</strong>
            </div>            <div class="col-md-10">
                @Html.EditorFor(model => model.adr_resto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.adr_resto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <strong>Description</strong>
            </div>            <div class="col-md-10">
                @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <strong>Fourchette</strong>
            </div>            <div class="col-md-10">
                @Html.EditorFor(model => model.fourchette, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fourchette, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <strong>Spécialité</strong>
            </div>            <div class="col-md-10">
                @Html.DropDownList("id_sp", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.id_sp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ajouter" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("RETOUR À LA LISTE", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
